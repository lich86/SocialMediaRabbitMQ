<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="lich">
        <createTable tableName="publications">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="time_created" type="DATETIME"/>
            <column name="time_updated" type="DATETIME"/>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="pub_id_seq"  incrementBy="1"/>

    </changeSet>

    <changeSet id="2" author="yourusername">
        <createTable tableName="publication_likes">
            <column name="publication_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subscriber_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="publication_likes"
                baseColumnNames="publication_id"
                constraintName="fk_publication_likes_publication"
                referencedTableName="publications"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="lich">
        <createTable tableName="comments">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="time_created" type="DATETIME"/>
            <column name="time_updated" type="DATETIME"/>
            <column name="publication_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="com_id_seq"  incrementBy="1"/>
    </changeSet>

</databaseChangeLog>